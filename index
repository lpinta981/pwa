    <h1>Consulta de Inventario</h1>
    <input type="text" id="codigo" placeholder="Ingrese el cÃ³digo del producto">
    <button onclick="consultarProducto()">Consultar</button>
    <p id="resultado"></p>

    <script>
        function consultarProducto() {
            var codigo = document.getElementById('codigo').value;
            google.script.run.withSuccessHandler(function(response) {
                document.getElementById('resultado').textContent = "Producto: " + response.nombre + ", Precio: $" + response.precio;
            }).buscarProducto(codigo);
        }
    </script>
